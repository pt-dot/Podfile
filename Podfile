# Uncomment this line to define a global platform for your project
platform :ios, '9.0'

target 'Base' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Base
  
  ## NETWORKING & PARSER
  pod 'Alamofire', '~> 4.5' # Networking framework
  pod 'AlamofireObjectMapper', '~> 4.1' # Map JSON into Swift Object (Alamofire plugins)
  pod 'AsyncSwift', '~> 2.0' # Easy async syntax
  pod 'ObjectMapper', '~> 2.2' # Map JSON into Swift Object
  pod 'PromiseKit', '~> 4.2' # Promise framework
  pod 'ReachabilitySwift', '~> 3' # Detect network availability
  
  # REACTIVE
  pod 'Bond', '~> 6.2' # Swift binding framework
  #pod 'ReSwift', '~> 4.0' # Unidirectional data flow
  #pod 'RxSwift', '~> 3.5' # Reactive programming for swift
  
  ## UI
  #pod 'Charts', '~> 3.0' # Chart library
  #pod 'DGElasticPullToRefresh', '~> 1.1' # Pull to refresh UI
  #pod 'PermissionScope', '~> 1.1' # UI for requesting user permission
  #pod 'RazzleDazzle', '~> 0.1' # Simple keyframe-based animation
  pod 'SCLAlertView', '~> 0.7' # Alertview UI
  #pod 'XLPagerTabStrip', '~> 7.0' # Pager view android (like)
  
  ## UTILITIES
  #pod 'CryptoSwift', '~> 0.6' # Cryptography in Swift
  #pod 'Dollar', '~> 6.2' # Alternative for ExSwift
  pod 'ExSwift', '~> 0.1' # Swift language toolset
  pod 'Hue', '~> 2.0' # Coloring utility
  #pod 'KeychainAccess', '~> 3.0' # KeychainAccess wrapper
  #pod 'netfox', '~> 1.9' # iOS network debugging library

  target 'BaseTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BaseUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
