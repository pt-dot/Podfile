  pod 'ObjectMapper', '~> 1.3' # Map JSON into Swift Object
  pod 'PromiseKit', '~> 3.2' # Promise framework
  pod 'ReachabilitySwift', '~> 2.3' # Detect network availability
  
  # REACTIVE
  pod 'Bond', '~> 4.3' # Swift binding framework
  #pod 'ReSwift', '~> 2.0' # Unidirectional data flow
  #pod 'RxSwift', '~> 2.6' # Reactive programming for swift
  
